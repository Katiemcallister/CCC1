<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee List</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <header>
        <img src="assets/kainos_small.png" alt="Icon" class="icon">
        <nav id="nav-links">
            <a href="/">Home</a>
            <a href="/user">Users</a>
            <a href="/employees">Employees</a>
        </nav>
    </header>
    <h1>Employee List</h1>

    <% if (employees && employees.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Salary</th>
                    <th>Role</th>
                    <th>Employee Number</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% employees.forEach(employee => { %>
                    <tr>
                        <td><%= employee.name %></td>
                        <td><%= employee.address %></td>
                        <td><%= employee.salary %></td>
                        <td><%= employee.role %></td>
                        <td><%= employee.employee_number %></td>
                        <td><a href="/employees/<%= employee.id %>">View</a></td>
                        <td><a href="/employees/update/<%= employee.id %>">Edit</a></td>
                        <td><a href="/employees/delete/<%= employee.id %>">Delete</a></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>No employees found.</p>
    <% } %>

    <form action="/employees/add" method="get">
        <input type="submit" value="Create New Employee">
    </form> 

    <footer class="footer" id="footer">
        <!-- ...existing code... -->
    </footer>
</body>
</html>
